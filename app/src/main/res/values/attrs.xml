<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="tab_count" format="integer"/>
    <attr name="indicator_color" format="color|reference"></attr>
    <attr name="indicator_height" format="dimension"></attr>
    <attr name="indicator_selected_color" format="color|reference"></attr>
    <attr name="tab_text" format="string|reference"></attr>
    <attr name="tab_background" format="color|reference"></attr>
    <attr name="tab_selected_background" format="color|reference"></attr>
    <attr name="tab_selected_text_color" format="color|reference"></attr>
    <attr name="tab_height" format="dimension"></attr>

    <declare-styleable name="HTabBar">
        <attr name="tab_count"></attr>
        <attr name="indicator_color"></attr>
        <attr name="indicator_height"></attr>
        <attr name="indicator_selected_color"></attr>
        <attr name="tab_text"></attr>
        <attr name="tab_background"></attr>
        <attr name="tab_selected_background"></attr>
        <attr name="tab_selected_text_color"></attr>
        <attr name="tab_height"></attr>
    </declare-styleable>


    <declare-styleable name="HRoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>